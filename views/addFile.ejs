<%- include('layout/header') %>

<div class="container">
    <div class="lg-6">
        <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-lg">
            <div class="md:flex">
                <div class="w-full px-4 py-6 ">

                    <form action="/addFile" method="post", id="add-form", enctype="multipart/form-data">
                    
                        <div class="mb-1">
                        <span class="text-sm">Full name</span>
                        <input type="text" class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600" name="name">
                        </div>

                        <div class="mb-1">

                        <span>Attachments</span>

                        <label class="form-label" for="customFile">Default file input example</label>
                        <input type="file" class="form-control" id="customFile" name="uploadfile" required />
                            
                        </div>

                        <div class="mt-3 text-right">

                        <a href="/">Cancel</a>
                        <input type="submit" class="btn btn-primary btn-sm" name="submit" value="Add File" />
                            
                        </div>
                   </form>


                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>