<%- include('layout/header') %>

<div class="container">
    <div class="lg-6">
        <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-lg">
            <div class="md:flex">
                <div class="w-full px-4 py-6 ">

                    <form action="/update/<%= files._id %>" method="post", id="add-form", enctype="multipart/form-data">
                    
                        <div class="mb-1">
                        <span class="text-sm">Full name</span>
                        <input type="text" class="h-12 px-3 w-full border-blue-400 border-2 rounded focus:outline-none focus:border-blue-600" name="name" value = "<%= files.userName %>">
                        </div>

                        <div class="mb-1">

                        <span>Attachments</span>

                        <label class="form-label" for="customFile">Default file input example</label>
                        <input type="file" class="form-control" id="customFile" name="uploadfile" />
                        <h4>File uploaded: <%= files.fileImage %></h4>    
                        </div>
                        <input type="hidden" name="old_file" value="<%= files.fileImage %>">
                        <div class="mt-3 text-right">

                        <a href="/">Cancel</a>
                        <input type="submit" class="btn btn-success btn-sm" name="submit" value="Update File" />
                            
                        </div>
                   </form>


                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>