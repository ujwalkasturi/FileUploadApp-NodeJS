<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type = "button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (files != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>File</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <% files.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td>
                                        <a href=""><i class="fa-regular fa-file fa-sm"></i> <%= row.fileImage %> </a>
                                    </td>
                                    <td><%= row.userName %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>"><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a href="/delete/<%= row._id %>"><i class="fa-regular fa-trash "></i></i></a>
                                        
                                    </td>
                                   </tr>
                            <% }) %>
                            
                        </tbody>
                    </table>
                <% } else { %>
                    <h1>No Files in DB</h1>
                    <% } %>
                
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
    
  